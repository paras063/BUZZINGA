<%-include('../includes/dashHeader.ejs')%>
<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>
    <%-include('../includes/sidebar.ejs')%>
        <div class="container-fluid mb-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Firms</h1>
            </div>

            <!-- create firm form -->
            <div class="card p-5">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Add Firm</h1>
                </div>

            <div class="row">
                <form class="user">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-4">
                            <input type="text" id="firmName" placeholder="Firm Name"
                                class="form-control form-control-user" />
                        </div>
                        <input type="hidden" id="ownerId" value='<%=ownerId%>'
                            class="form-control form-control-user"/>
                     
                        <div class="col-sm-6">
                            <input type="email" id="firmMail" placeholder="Email"
                                class="form-control form-control-user" />
                        </div>
                    </div>
                        <div class="row form-group">
                            <div class="col mb-4">
                                <input type="text" id="address" placeholder="Address" 
                                class="form-control form-control-user"  />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <input type="text" id="city" placeholder="City" 
                                class="form-control form-control-user"  />
                            </div>
                            <div class="col-sm-3">
                                <input type="text" id="state" placeholder="State" 
                                class="form-control form-control-user"  />
                            </div>
                            <div class="col-sm-3">
                                <input type="text" id="country" placeholder="Country" 
                                class="form-control form-control-user"  />
                            </div>
                            <div class="col-sm-3 mb-3">
                                <input type="text" id="pincode" placeholder="PinCode" 
                                class="form-control form-control-user"  />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3">
                                <input type="text" id="gstNo" placeholder="Gst No" 
                                    class="form-control form-control-user" />
                            </div>
                            <div class="col-sm-6">
                                <input type="tel" id="firmContact" placeholder="Contact Number" 
                                    class="form-control form-control-user"  />
                            </div>
                            </div>
                            <div class="form-group row">
                            <div class="col mb-4">
                                <label for="type" class="ml-2 text-dark">Firm Type</label>
                                <input id="type" placeholder="Type of Firm" class="form-control form-control-user" list="typeList">
                                <datalist id='typeList'">                               
                                    <option value="Sole Proprietorship">Sole Proprietorship</option>
                                    <option value="Partnership">Partnership</option>
                                    <option value="Limited Liability Company">Limited Liability Company (LLC)</option>
                                    <option value="Corporation">Corporation</option>
                                </datalist>
                            </div>
                        </div>
                       
                        
                        <button id="createFirm" class="btn btn-primary btn-block btn-user mb-2 ">
                            Create Firm
                        </button>

                        <!-- validation errors-->
                    <span align="center" class="d-none text-danger form-outline border border-secondary"
                    id="validationFail" name="validationFail"
                    style="display:inline-block; width: 100%;background-color: rgb(253, 180, 172);"></span>
                  <br>

                  <span align="center" class="d-none text-success form-outline text-center border border-secondary"
                    id="validationSuccess" name="validationSuccess"
                    style="display:inline-block; width: 100%; background-color: rgb(172, 253, 172);"></span>
                </form>
            </div>
            <hr>


            <!-- Page Heading -->
            <h1 class="h3 mb-5 text-gray-800">View Firms</h1>

            <!-- DataTables Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Firms</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Firm Name</th>
                                    <th>Owner Name</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>Type</th>
                                    <th>Gst No.</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Owner Name</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>Type</th>
                                    <th>Gst No.</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <%firms.forEach((firm)=>{%>
                                <tr>
                                    <td><%=firm.name%></td>
                                    <td><%=userName%></td>
                                    <td><%=firm.email%></td>
                                    <td><%=firm.contact%></td>
                                    <td><%=firm.address.address+","+firm.address.city+","+firm.address.state+","+firm.address.country+","+firm.address.pincode%></td>
                                    <td><%=firm.type%></td>
                                    <td><%=firm.gstNo%></td>
                                </tr>
                                <%});%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <!-- /.container-fluid -->
        </div>
    </div>
    <!-- End of Main Content -->
       
    <%-include('../includes/dashFooter.ejs')%>
    <script src="js/firm.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="/js/demo/datatables-demo.js"></script>
</body>
</html>
